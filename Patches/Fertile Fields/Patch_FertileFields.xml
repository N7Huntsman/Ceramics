<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
				<mods>
					<li>[RF] Fertile Fields [1.0]</li>
				</mods>
			<!-- Allowed Fiber to be made from Plant Scraps -->
			<match Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName="Make_FiberFromWood"]/ingredients/li/filter/thingDefs</xpath>
				<value>
					<li>PlantScraps</li>
				</value>
			</match>
			
			<match Class="PatchOperationAdd">
				<xpath>Defs/RecipeDef[defName="Make_FiberFromWood"]/fixedIngredientsFilter/thingDefs</xpath>
				<value>
					<li>PlantScraps</li>
				</value>
			</match>

			<!-- Remove RF Clay and Sand -->
			<match Class="PatchOperationRemove">
				<xpath>Defs/ThingDef[defName="SandPile" or defName="RFFClay"]</xpath>
			</match>


	</Operation>
</Patch>