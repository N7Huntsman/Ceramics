<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
					<mods>
						<li>Concrete Walls</li>
					</mods>
		<match Class="PatchOperationFindMod">
					<mods>
						<li>[RF] Fertile Fields [1.0]</li>
					</mods>
					
			<nomatch Class="PatchOperationSequence">
				<operations>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="MakeConcreteSlabBricks"]/ingredients</xpath>
					<value>
						  <li>
							<filter>
							  <thingDefs>
									<li>N7_Sand</li>
							  </thingDefs>
							</filter>
							<count>10</count>
						  </li>					
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="MakeConcreteSlabBricks"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>N7_Sand</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="MakeConcreteSlabBricks"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>N7_Sand</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="MakeConcreteSlabChunks"]/ingredients</xpath>
					<value>
						  <li>
							<filter>
							  <thingDefs>
									<li>N7_Sand</li>
							  </thingDefs>
							</filter>
							<count>20</count>
						  </li>					
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="MakeConcreteSlabChunks"]/fixedIngredientFilter/thingDefs</xpath>
					<value>
						<li>N7_Sand</li>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="MakeConcreteSlabChunks"]/defaultIngredientFilter/thingDefs</xpath>
					<value>
						<li>N7_Sand</li>
					</value>
				</li>

				</operations>
			</nomatch>			
		</match>
	</Operation>

</Patch>