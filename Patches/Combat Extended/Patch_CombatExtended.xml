<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
					<mods>
						<li>Combat Extended</li>
					</mods>
					
			<match Class="PatchOperationSequence">
				<operations>

				<li Class="PatchOperationFindMod">
					<mods>
						<li>Fertile Fields [1.1]</li>					
					</mods>
					<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="N7_Sand"]/statBases</xpath>
						<value>
							<Bulk>0.03</Bulk>
						</value>
					</nomatch>
				</li>
								
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="N7_RawClay"]/statBases</xpath>
					<value>
						<Bulk>0.05</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="N7_PlantFiber"]/statBases</xpath>
					<value>
						<Bulk>0.04</Bulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="N7_SilicaWafer"]/statBases</xpath>
					<value>
						<Bulk>0.1</Bulk>
					</value>
				</li>

				
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="N7_HardenedCeramic"]/statBases</xpath>
					<value>
						<Bulk>0.25</Bulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="N7_HardenedCeramic"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>2</StuffPower_Armor_Sharp>
					</value>
				</li>				

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="N7_HardenedCeramic"]/statBases/StuffPower_Armor_Blunt</xpath>
					<value>
						<StuffPower_Armor_Blunt>1.1</StuffPower_Armor_Blunt>
					</value>
				</li>	

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="N7_HardenedCeramic"]/stuffProps/categories</xpath>
					<value>
						<li>Steeled</li>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="Apparel_CombatHelmet"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>9</ArmorRating_Sharp>
