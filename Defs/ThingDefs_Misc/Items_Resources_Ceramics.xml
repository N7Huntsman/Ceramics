			<li>CeramicsBench_Electric</li>			
		</recipeUsers>		
		<products>
			<N7_RawMudbrick>35</N7_RawMudbrick>
		</products>
	</RecipeDef>

  <!--=============== Dried Mud Brick ====================-->
