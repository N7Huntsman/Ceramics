<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=============== Combat Helmet ====================-->

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_CombatHelmet</defName>
    <label>combat helmet</label>
    <description>A lightweight helmet made of reinforced ceramic composite, designed to protect the head. While the design has an open face, panels along the sides protect the jaw.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>AdvancedCeramics</researchPrerequisite>	
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/CombatHelmet/CombatHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <MaxHitPoints>130</MaxHitPoints>
      <Mass>1</Mass>
      <ArmorRating_Sharp>0.85</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Heat>0.1</ArmorRating_Heat>
      <Insulation_Cold>0.1</Insulation_Cold>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <costList>
      <N7_HardenedCeramic>30</N7_HardenedCeramic>	
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/CombatHelmet/CombatHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef> 

